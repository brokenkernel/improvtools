root = true

[*]
charset = utf-8
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[{*.ant,*.fxml,*.jhm,*.jnlp,*.jrxml,*.rng,*.tld,*.wsdl,*.xml,*.xsd,*.xsl,*.xslt,*.xul}]
indent_size = 2
tab_width = 2

[AndroidManifest.xml]
indent_size = 4
tab_width = 4

[{*.kt,*.kts}]
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true
ij_kotlin_name_count_to_use_star_import = 2147483647
ij_kotlin_name_count_to_use_star_import_for_members = 2147483647
ij_kotlin_packages_to_use_import_on_demand = unset
indent_size = 4
ktlint_code_style=android_studio
ktlint_compose_avoid-using-unstable-collections = enabled
ktlint_function_naming_ignore_when_annotated_with = Composable
ktlint_standard_class-signature = disabled
ktlint_standard_discouraged-comment-location = disabled
ktlint_standard_function-expression-body = disabled
ktlint_standard_function-signature = disabled
ktlint_standard_property-naming = disabled
ktlint_standard_trailing-comma-on-call-site = enabled
ktlint_standard_trailing-comma-on-declaration-site = enabled

# https://mrmans0n.github.io/compose-rules/ktlint/
compose_allowed_composition_locals = LocalSnackbarHostState,LocalBottomSheetContent
compose_disallow_material2 = true
compose_disallow_unstable_collections = true
compose_preview_naming_enabled = true
compose_preview_naming_strategy = suffix

[{*.markdown,*.md}]
indent_size = 2
tab_width = 2

[{*.toml,Cargo.lock,Cargo.toml.orig,Gopkg.lock,Pipfile,poetry.lock,uv.lock}]
indent_size = 2
max_line_length = 240
tab_width = 2

[*.{yml,yaml}]
indent_size = 2
tab_width = 2
